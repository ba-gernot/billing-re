# Supabase Configuration
SUPABASE_URL=https://[your-project].supabase.co
SUPABASE_ANON_KEY=[your-anon-key]
SUPABASE_SERVICE_KEY=[your-service-key]

# AWS Configuration
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=[your-access-key]
AWS_SECRET_ACCESS_KEY=[your-secret-key]
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=2048

# Service URLs (Local Development)
TRANSFORMATION_SERVICE_URL=http://localhost:3001
RATING_SERVICE_URL=http://localhost:3002
BILLING_SERVICE_URL=http://localhost:3003
API_GATEWAY_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://billing_user:billing_pass@localhost:5432/billing_re

# Redis
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m

# Performance Settings
ENABLE_DMN_CACHE=true
DMN_CACHE_TTL=300
MAX_PARALLEL_RATINGS=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info
ENABLE_PII_MASKING=true

# Development
NODE_ENV=development
PYTHON_ENV=development